Consider  the  following  schema:  STUDENT  (USN,  name,  date_of_birth, 
branch, mark1, mark2, mark3, total,GPA) 

2. CREATE TABLE STUDENT1

create table STUDENT1
(
	USN varchar(10)primary key,
	name varchar(20),
	DOB date,
	branch varchar(10),
	marks1 number(3),
	marks2 number(3),
	marks3 number(3),
	total number(3),
	GPA number(4,2)
);

	insert into STUDENT1(USN,name,DOB,branch,marks1,marks2,marks3)
	values('MCA001','Anand','21-MAY-1980','MCA',90,95,98);

	insert into STUDENT1(USN,name,DOB,branch,marks1,marks2,marks3)
	values('MCA002','Vijay','28-OCT-1980','MCA',80,85,90);

	insert into STUDENT1(USN,name,DOB,branch,marks1,marks2,marks3)
	values('MCA003','Harish','08-AUG-1978','MBA',72,65,69);

	insert into STUDENT1(USN,name,DOB,branch,marks1,marks2,marks3)
	values('MCA004','Girish','14-MAR-1980','MBA',60,65,70);

	insert into STUDENT1(USN,name,DOB,branch,marks1,marks2,marks3)
	values('MCA005','Sachin','10-SEP-1980','MCA',70,80,88);

	insert into STUDENT1(USN,name,DOB,branch,marks1,marks2,marks3)
	values('MCA006','Kumar','28-MAY-1980','MCA',55,58,62);

